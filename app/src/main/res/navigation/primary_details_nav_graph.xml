<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/title_list_fragment">

    <fragment
        android:id="@+id/title_list_fragment"
        android:name="com.deckerth.thomas.foobarremotecontroller2.TitleListFragment"
        android:label="@string/title_title_list">
        <action
            android:id="@+id/show_title_detail"
            app:destination="@id/title_detail_fragment" />
    </fragment>
    <fragment
        android:id="@+id/title_detail_fragment"
        android:name="com.deckerth.thomas.foobarremotecontroller2.TitleDetailFragment"
        android:label="@string/title_title_detail"
        tools:layout="@layout/fragment_title_detail">
        <argument
            android:name="item_id"
            android:defaultValue=""
            app:argType="string" />
    </fragment>
</navigation>